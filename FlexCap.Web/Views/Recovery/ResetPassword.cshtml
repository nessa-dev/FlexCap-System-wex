@model FlexCap.Web.Models.Account.ResetPasswordModel
@{
    Layout = null;
    ViewData["Title"] = "Reset Password";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <title>@ViewData["Title"]</title>
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css">

    <link rel="stylesheet" href="~/css/Cadastro.css" asp-append-version="true" />

    <style>
        body {
            background-color: #001f4c; 
        }

        .form-container {
            background-color: #ffffff;
            padding: 30px;
            border-radius: 8px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);
            width: 100%;
            max-width: 400px; 
        }

        .min-vh-100 {
            min-height: 100vh;
        }
    </style>
</head>
<body>
    <div class="container-fluid min-vh-100 d-flex justify-content-center align-items-center">

        <a href="/Login" class="text-white text-decoration-none position-absolute top-0 start-0" style="margin-top:20px; margin-left:20px;">
            <i class="bi bi-arrow-left me-2" style="color: #FFD700;"></i> Back
        </a>

        <div class="form-container">
            <h2 class="mb-4 text-center" style="color: #3b3b3b;">Set New Password</h2>

            <form asp-controller="Recovery" asp-action="ResetPassword" method="post">
                @Html.AntiForgeryToken()

                <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                <input type="hidden" asp-for="Token" />

                <div class="form-group mb-3">
                    <label asp-for="Password" class="form-label visually-hidden">New Password</label>
                    <input asp-for="Password" class="form-control" type="password" placeholder="New Password" />
                    <span asp-validation-for="Password" class="text-danger d-block mt-1"></span>
                </div>

                <div class="form-group mb-4">
                    <label asp-for="ConfirmPassword" class="form-label visually-hidden">Confirm Password</label>
                    <input asp-for="ConfirmPassword" class="form-control" type="password" placeholder="Confirm Password" />
                    <span asp-validation-for="ConfirmPassword" class="text-danger d-block mt-1"></span>
                </div>

                <button type="submit" class="btn btn-success w-100">Change Password</button>
            </form>
        </div>

        <div class="position-absolute bottom-0 start-0 m-3">
            <img src="~/img/logo.png" alt="FlexCap Logo" class="logo-footer-img" />
        </div>

    </div>

    <script src="https://cdn.jsdelivr.net/npm/jquery@3.7.1/dist/jquery.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/jquery-validation@1.19.5/dist/jquery.validate.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/jquery-validation-unobtrusive@4.0.0/jquery.validate.unobtrusive.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>