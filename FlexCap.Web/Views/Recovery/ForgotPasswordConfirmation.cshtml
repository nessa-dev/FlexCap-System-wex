
@{
    Layout = null;
    ViewData["Title"] = "Request Sent";

    string successMessage = TempData["SuccessMessage"] as string ?? "Your request has been processed. Please check your inbox for the recovery link.";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <title>@ViewData["Title"]</title>
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css">

    <link rel="stylesheet" href="~/css/Cadastro.css" asp-append-version="true" />

    <style>
        body {
            background-color: #001f4c; 
        }

        .form-container {
            background-color: #ffffff;
            padding: 30px;
            border-radius: 8px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);
            width: 100%;
            max-width: 400px; 
        }

        .min-vh-100 {
            min-height: 100vh;
        }
    </style>
</head>
<body>
    <div class="container-fluid min-vh-100 d-flex justify-content-center align-items-center">

        <a href="/Login" class="text-white text-decoration-none position-absolute top-0 start-0" style="margin-top:20px; margin-left:20px;">
            <i class="bi bi-arrow-left me-2" style="color: #FFD700;"></i> Back
        </a>

        <div class="form-container text-center">

            <h2 class="mb-4">Request Sent</h2>

            <p class="alert alert-success">
                @successMessage
            </p>

            <p class="mt-4">
                <a asp-controller="Login" asp-action="Index" class="btn btn-primary w-100">Back to Login</a>
            </p>
        </div>

        <div class="position-absolute bottom-0 start-0 m-3">
            <img src="~/img/logo.png" alt="FlexCap Logo" class="logo-footer-img" />
        </div>

    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>