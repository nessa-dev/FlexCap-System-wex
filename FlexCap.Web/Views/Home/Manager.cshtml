@model FlexCap.Web.Models.HomeMetricsViewModel


@{
    ViewData["Title"] = "Home Manager";
    Layout = "~/Views/Shared/Template.cshtml";
}

<div class="py-4" style="max-width: 850px; width: 100%; margin-left: 0.5rem; margin-right: auto; overflow: hidden; height: 100%;">

    <!-- Title -->
    <h3 class="fw-bold mb-4">Welcome, @(Model?.FirstName)!</h3>
    <div class="row g-4 mb-4">

        <!-- Team Overview -->
        <div class="col-12 col-md-6">
            <div class="card shadow-sm">
                <div class="card-body p-2">
                    <h6 class="card-title texto-flexcap fw-bold mb-2">Team Overview</h6>
                    <div class="d-flex align-items-center">
                        <div class="d-flex flex-column rounded shadow-sm overflow-hidden me-2" style="width: 140px; height: 110px;">
                            <div class="d-flex justify-content-center align-items-center text-white" style="height: 55%; background-color: #001637;">
                                <small class="fw-bold mb-0">@(Model?.UserTeam)</small>
                            </div>
                            <div class="d-flex justify-content-center align-items-center bg-white" style="height: 40%;">
                                <i class="bi bi-check-lg" style="font-size: 1.5rem; color: #001637;"></i>
                            </div>
                        </div>
                        <div class="d-flex flex-column justify-content-center p-2 rounded shadow-sm border" style="height: 90px; flex-grow: 1; font-size: 0.8rem;">
                            <p class="mb-1">@(Model?.ActiveMembers) Active Members</p>
                            <p class="mb-0">1 Sprint in Progress</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>


        <!-- Upcoming Sprint -->
        <div class="col-12 col-md-6">
            <div class="card shadow-sm">
                <div class="card-body p-2">
                    <h5 class="card-title texto-flexcap fw-bold mb-2">Upcoming Sprint</h5>
                    <div class="mb-2">
                        <div class="progress" role="progressbar" aria-label="Upcoming Sprint Progress" aria-valuenow="30" aria-valuemin="0" aria-valuemax="100" style="height: 25px; background-color: #e9ecef;">
                            <div class="progress-bar bg-primary text-white d-flex align-items-center justify-content-center" style="width: 30%;">
                                <small class="mb-0">June 1-25</small>
                            </div>
                        </div>
                        <p class="mt-1 mb-0 small">Progress: 30%</p>
                    </div>
                    <div class="alert alert-warning d-flex align-items-center p-1 mt-1" role="alert" style="font-size: 0.75rem;">
                        <i class="bi bi-fire me-1" style="font-size: 0.9rem; color: #dc3545;"></i>
                        <p class="mb-0">Heads up! 30% of the team will be out June 10-12 due to holidays.</p>
                    </div>
                </div>
            </div>
        </div>



        <!-- Pending Requests -->
        <div class="col-12 col-md-6">
            <div class="card shadow-sm h-100">
                <div class="card-body p-3">
                    <h5 class="card-title fw-bold mb-3">Pending Approvals</h5>

                    @if (Model?.PendingManagerRequests?.Any() == true)
                    {
                        <div class="list-group list-group-flush">
                            @foreach (var request in Model.PendingManagerRequests)
                            {
                                <div class="list-group-item d-flex justify-content-between align-items-center p-2 border-bottom">
                                    <div class="d-flex align-items-center">

                                        <!-- Foto do colaborador -->
                                        <div class="rounded overflow-hidden me-3" style="width: 42px; height: 42px; flex-shrink: 0;">
                                            @if (!string.IsNullOrEmpty(request.PhotoUrl))
                                            {
                                                <img src="@request.PhotoUrl"
                                                     alt="@request.CollaboratorName"
                                                     class="img-fluid rounded-circle"
                                                     style="object-fit: cover; width: 42px; height: 42px;" />
                                            }
                                            else
                                            {
                                                <img src="https://ui-avatars.com/api/?name=@Uri.EscapeDataString(request.CollaboratorName)&background=001637&color=fff&size=64"
                                                     alt="@request.CollaboratorName"
                                                     class="img-fluid rounded-circle" />
                                            }
                                        </div>

                                        <!-- Nome e tipo -->
                                        <div class="d-flex flex-column">
                                            <a href="@Url.Action("PendingList", "ManagerApproval")"
                                               class="fw-bold text-dark text-decoration-none"
                                               title="Review request: @request.Subject">
                                                @request.CollaboratorName
                                            </a>
                                            <small class="text-muted">@request.TypeName</small>
                                        </div>
                                    </div>

                                    <!-- Data da solicitação -->
                                    <div class="text-end">
                                        <small class="text-muted">@request.SubmissionDate.ToString("MMM dd")</small>
                                    </div>
                                </div>
                            }
                        </div>
                    }
                    else
                    {
                        <p class="text-muted text-center pt-3">No pending requests from your team.</p>
                    }
                </div>
            </div>
        </div>







        <!-- This Week -->
        <div class="col-12 col-md-6 mb-4">
            <div class="card shadow-sm h-100">
                <div class="card-body p-4">
                    <h5 class="card-title texto-flexcap fw-bold mb-3">This Week</h5>
                    <ul id="thisWeekEventsList" class="list-unstyled mb-0">
                        <li class="text-muted small">Loading events...</li>
                    </ul>
                </div>
            </div>
        </div>


                        <script>
    document.addEventListener('DOMContentLoaded', function () {
        const listEl = document.getElementById('thisWeekEventsList');

        async function loadThisWeekEvents() {
            listEl.innerHTML = '<li class="text-muted small">Loading events...</li>';

            try {
                // Chama o endpoint C#: /Calendar/GetThisWeekEvents
                const resp = await fetch('/Calendar/GetThisWeekEvents');
                if (!resp.ok) throw new Error('Failed to fetch events: ' + resp.status);
                
                const events = await resp.json();

                if (events.length === 0) {
                    listEl.innerHTML = '<li class="text-muted small">No events scheduled for this week.</li>';
                    return;
                }

                listEl.innerHTML = ''; // Limpa o "Loading..."

                events.forEach(event => {
                    const li = document.createElement('li');
                    li.classList.add('mb-3', 'd-flex', 'align-items-start');
                    
                    // O HTML injetado, usando o IconClass (e.g., bi-calendar-check-fill) 
                    // e o DayOfWeekShort (e.g., (Tue)) que vêm do Controller.
                            li.innerHTML = `
                    <i class="bi ${event.iconClass} me-3 fs-5" style="color: #007bff;"></i>
                    <div class="d-flex justify-content-between flex-grow-1">
                        <span class="fw-semibold">${event.title}</span>
                        <span class="text-muted small">${event.dayOfWeekShort}</span>
                    </div>
                `;
                listEl.appendChild(li);
            });

            } catch (error) {
                console.error("Error loading weekly events:", error);
                listEl.innerHTML = '<li class="text-danger small">Error loading events.</li>';
            }
        }

        loadThisWeekEvents();
    });
</script>