@model FlexCap.Web.Models.HomeMetricsViewModel
@{
    ViewData["Title"] = "Home Colaborador";
    Layout = "~/Views/Shared/Template.cshtml";
}

<div class="py-4" style="max-width: 850px; width: 100%; margin-left: 0.5rem; margin-right: auto; overflow: hidden; height: 100%;">
    <h3 class="fw-bold mb-4">Welcome, @(Model?.FirstName)!</h3>

    <div class="row g-4 mb-4">

        <!-- Team Overview -->
        <div class="col-12 col-md-6">
            <div class="card shadow-sm">
                <div class="card-body p-2">
                    <h6 class="card-title texto-flexcap fw-bold mb-2">Team Overview</h6>
                    <div class="d-flex align-items-center">
                        <div class="d-flex flex-column rounded shadow-sm overflow-hidden me-2" style="width: 140px; height: 110px;">
                            <div class="d-flex justify-content-center align-items-center text-white" style="height: 55%; background-color: #001637;">
                                <small class="fw-bold mb-0">@(Model?.UserTeam)</small>
                            </div>
                            <div class="d-flex justify-content-center align-items-center bg-white" style="height: 40%;">
                                <i class="bi bi-check-lg" style="font-size: 1.5rem; color: #001637;"></i>
                            </div>
                        </div>
                        <div class="d-flex flex-column justify-content-center p-2 rounded shadow-sm border" style="height: 90px; flex-grow: 1; font-size: 0.8rem;">
                            <p class="mb-1">@(Model?.ActiveMembers) Active Members</p>
                            <p class="mb-0">
                                @Model.ActiveSprintCount Sprint@(Model.ActiveSprintCount == 1 ? "" : "s") in Progress
                            </p>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Upcoming Sprint -->
        <div class="col-12 col-md-6">
            <div class="card shadow-sm">
                <div class="card-body p-2">

                    @if (Model.IsSprintActive)
                    {
                        <h5 class="card-title texto-flexcap fw-bold mb-2">@Model.SprintName</h5>

                        <div class="mb-2">
                            <div class="progress" role="progressbar"
                                 aria-label="Upcoming Sprint Progress"
                                 aria-valuenow="@(Model.SprintProgressPercent)"
                                 aria-valuemin="0"
                                 aria-valuemax="100"
                                 style="height: 25px; background-color: #e9ecef;">

                                <div class="progress-bar bg-primary text-white d-flex align-items-center justify-content-center"
                                     style="width: @(Model.SprintProgressPercent.ToString("F0"))%;">
                                    <small class="mb-0">@Model.SprintDuration</small>
                                </div>
                            </div>
                            <p class="mt-1 mb-0 small">Progress: @(Model.SprintProgressPercent.ToString("F1"))%</p>
                        </div>

                        @foreach (var notification in Model.SprintImpactNotifications)
                        {
                            <div class="alert alert-warning d-flex align-items-center p-1 mt-1" role="alert" style="font-size: 0.75rem;">
                                @* O ícone e a cor são estáticos, pois a mensagem já deve conter o significado de "impacto" *@
                                <i class="bi bi-fire me-1" style="font-size: 0.9rem; color: #dc3545;"></i>
                                <p class="mb-0">@notification</p>
                            </div>
                        }
                    }
                    else
                    {
                        <h5 class="card-title texto-flexcap fw-bold mb-2">Upcoming Sprint</h5>
                        <div class="alert alert-info text-center p-3">
                            There is no active sprint for your team.
                        </div>
                    }
                </div>
            </div>
        </div>

        <!-- Pending Requests -->
        <div class="col-12 col-md-6">
            <div class="card shadow-sm">
                <div class="card-body p-3">
                    <h6 class="card-title fw-bold mb-3">Your Requests Status</h6>

                    @if (Model?.ColaboratorHistory?.Any() == true)
                    {
                        @foreach (var request in Model.ColaboratorHistory)
                        {
                            string badgeClass = request.CurrentStatus switch
                            {
                                "Approved" => "bg-success",
                                "Rejected" => "bg-danger",
                                _ => "bg-warning text-dark"
                            };

                            <div class="d-flex justify-content-between align-items-center py-2 border-bottom">
                                <div class="fw-bold">@request.TypeName</div>
                                <div class="text-center">
                                    <span class="badge @badgeClass">@request.DisplayStatus</span>
                                </div>
                                <div class="text-muted small">@request.SubmissionDate.ToString("MMM dd")</div>
                            </div>
                        }
                    }
                    else
                    {
                        <p class="text-muted text-center pt-2">No recent requests found.</p>
                    }
                </div>
            </div>
        </div>

        <!-- This Week -->
        <div class="col-12 col-md-6 mb-4">
            <div class="card shadow-sm h-100">
                <div class="card-body p-4">
                    <h6 class="card-title texto-flexcap fw-bold mb-3">This Week</h6>
                    <ul id="thisWeekEventsListCollab" class="list-unstyled mb-0">
                        <li class="text-muted small">Loading events...</li>
                    </ul>
                </div>
            </div>
        </div>

        <script>
            document.addEventListener('DOMContentLoaded', function () {
                const listEl = document.getElementById('thisWeekEventsListCollab');

                async function loadThisWeekEvents() {
                    listEl.innerHTML = '<li class="text-muted small">Loading events...</li>';

                    try {
                        const resp = await fetch('/Calendar/GetThisWeekEvents');
                        if (!resp.ok) throw new Error('Failed to fetch events: ' + resp.status);

                        const events = await resp.json();

                        if (events.length === 0) {
                            listEl.innerHTML = '<li class="text-muted small">No events scheduled for this week.</li>';
                            return;
                        }

                        listEl.innerHTML = '';

                        events.forEach(event => {
                            const li = document.createElement('li');
                            li.classList.add('mb-3', 'd-flex', 'align-items-start');

                            li.innerHTML = `
                                <i class="bi ${event.iconClass} me-3 fs-5" style="color: #007bff;"></i>
                                <div class="d-flex justify-content-between flex-grow-1">
                                    <span class="fw-semibold">${event.title}</span>
                                    <span class="text-muted small">${event.dayOfWeekShort}</span>
                                </div>
                            `;
                            listEl.appendChild(li);
                        });

                    } catch (error) {
                        console.error("Error loading weekly events:", error);
                        listEl.innerHTML = '<li class="text-danger small">Error loading events.</li>';
                    }
                }

                loadThisWeekEvents();
            });
        </script>

