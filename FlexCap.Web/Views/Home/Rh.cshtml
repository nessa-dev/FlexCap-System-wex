@using FlexCap.Web.Models;
@using FlexCap.Web.Models.Requests; 
@using System.Collections.Generic; 


@model FlexCap.Web.Models.HomeMetricsViewModel

@{
    ViewData["Title"] = "Home Rh";
    Layout = "~/Views/Shared/Template.cshtml";

}

<div class="py-4" style="max-width: 850px; width: 100%; margin-left: 0.5rem; margin-right: auto; overflow: hidden; height: 100%;">
    <h3 class="fw-bold mb-2">Overview - Human Resources</h3>
    <p class="text-muted mb-4" style="font-size: 1em;">
        Hello! Here is a summary of recent activities and registrations awaiting your approval.
    </p>
    <div class="row g-3 mb-4">

        <!-- Total Employees -->
        <div class="col-md-4">
            <div class="card text-center h-100 shadow-sm">
                <div class="card-body p-2">
                    <h6 class="card-title fw-bold mb-1">Total number of employees</h6>
                    <h2 class="fw-bold mb-0">@ViewData["TotalColaboradores"]</h2>
                    <p class="text-muted mb-2 small">Registered</p>
                    <a asp-controller="Colaboradores" asp-action="Listar" class="btn btn-custom btn-sm"><small>View Details</small></a>
                </div>
            </div>
        </div>

        <!-- Requests Pending -->
        <div class="col-md-4">
            <div class="card text-center h-100 shadow-sm">
                <div class="card-body p-2">
                    <h6 class="card-title fw-bold mb-1">Requests pending approval</h6>
                    <h2 class="fw-bold mb-0">@Model.TotalPendingHR</h2>
                    <p class="text-muted mb-3 small">Awaiting HR review</p>
                </div>
            </div>
        </div>

        <!-- Active Sectors -->
        <div class="col-md-4">
            <div class="card text-center h-100 shadow-sm">
                <div class="card-body p-2">
                    <h6 class="card-title fw-bold mb-1">Active departments</h6>
                    <h2 class="fw-bold mb-0">@Model.ActiveSectorsCount</h2>
                    <p class="text-muted mb-3 small">departments</p>
                </div>
            </div>
        </div>




    <!-- Order table -->
        <a asp-controller="HRApproval" asp-action="PendingList" class="btn btn-custom btn-sm">
            <small>View all requests</small>
        </a>

        <div class="table-responsive">
            <table class="table mb-0 table-sm">
                <thead>
                </thead>
                <tbody>
                    @if (Model.LatestPendingRequests == null || !Model.LatestPendingRequests.Any())
                    {
                        <tr>
                            <td colspan="5" class="text-center text-muted">No requests currently pending your review.</td>
                        </tr>
                    }
                    else
                    {
                        @foreach (var request in Model.LatestPendingRequests)
                        {
                            <tr>
                                <td>@request.CollaboratorName</td>
                                <td>@request.Position</td>
                                <td>@request.Department</td>
                                <td><span class="badge bg-warning text-dark">Pending RH</span></td>
                                <td class="text-center">
                                    
                                </td>
                            </tr>
                        }
                    }
                </tbody>
            </table>
        </div>




    </div>
</div>
