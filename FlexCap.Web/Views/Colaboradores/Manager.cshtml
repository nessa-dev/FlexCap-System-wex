@using System.Security.Claims

@{
    ViewData["Title"] = "Gestão de Colaboradores";
    Layout = "~/Views/Shared/Template.cshtml";
}

@model List<FlexCap.Web.Models.Colaborador>

<div class="py-4" style="max-width: 850px; width: 100%; margin-left: 0.5rem; margin-right: auto; overflow-y: hidden; height: calc(100vh - 5rem);">

    <h3 class="fw-bold mb-3">Collaborators</h3>
    <p class="text-muted mb-3 small">@Model.Count members</p>

    <div class="row g-2">
        @if (Model != null)
        {
            var loggedInFullName = User.FindFirst(ClaimTypes.Name)?.Value;

            foreach (var colaborador in Model)
            {
                // Normaliza o status
                var statusKey = (colaborador.Status ?? "N/A").Trim().ToUpperInvariant();

                string statusDisplay;
                string statusColorClass;
                string dotColorClass;

                if (statusKey == "ACTIVE" || statusKey == "ATIVO" || statusKey == "1")
                {
                    statusDisplay = "Active";
                    statusColorClass = "text-success fw-bold";
                    dotColorClass = "bg-success";
                }
                else if (statusKey == "INACTIVE" || statusKey == "INATIVO" || statusKey == "0")
                {
                    statusDisplay = "Inactive";
                    statusColorClass = "text-danger fw-bold";
                    dotColorClass = "bg-danger";
                }
                else
                {
                    statusDisplay = "N/A";
                    statusColorClass = "text-secondary fw-bold";
                    dotColorClass = "bg-secondary";
                }

                var nomeDisplay = colaborador.FullName;

                if (colaborador.FullName == loggedInFullName)
                {
                    nomeDisplay += " (You)";
                }

                <div class="col-12 mb-2">
                    <div class="card p-2 shadow-sm d-flex flex-row align-items-center">
                        <img src="@colaborador.PhotoUrl" class="rounded-circle me-3" width="40" height="40" alt="Colaborator Photo">

                        <div>
                            <h6 class="mb-0 fw-bold">@nomeDisplay</h6>
                            <small class="text-muted small">@colaborador.Position</small>
                        </div>

                        <div class="ms-auto d-flex align-items-center">
                            <span class="@statusColorClass me-2 small">@statusDisplay</span>
                            <span class="dot @dotColorClass"></span>
                        </div>
                    </div>
                </div>
            }
        }
    </div>
</div>

<style>
    .dot {
        height: 10px;
        width: 10px;
        border-radius: 50%;
        display: inline-block;
    }
</style>
