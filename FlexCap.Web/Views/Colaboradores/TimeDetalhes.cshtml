    @model List<FlexCap.Web.Models.Colaborador>

    @{
        ViewData["Title"] = "Colaboradores da Equipe";
        Layout = "~/Views/Shared/Template.cshtml";

        string loggedInUserName = ViewData["LoggedInUserName"] as string ?? "";
        string profile = ViewData["Profile"] as string ?? "Colaborador"; 
    }

<style>
    .status-label {
        font-weight: bold;
        font-size: 13px;
        margin-right: 6px; 
    }

    .status-active {
        color: #28a745 !important;
    }

    .status-inactive {
        color: #dc3545 !important; 
    }

    .dot {
        width: 12px;
        height: 12px;
        border-radius: 50%;
        display: inline-block;
        margin-left: 4px;
    }

    .bg-success {
        background-color: #28a745 !important;
    }

    .bg-danger {
        background-color: #dc3545 !important;
    }
</style>




    <div class="py-4 w-100">
        <h3 class="fw-bold mb-3">Collaborators</h3>
        <p class="text-muted mb-4">@Model.Count members</p>

        <div class="row g-2">
            @if (Model != null)
            {
                foreach (var colaborador in Model)
                {
                string dbStatus = colaborador.Status?.Trim() ?? "Active";

                string statusDisplay =
                dbStatus.Equals("Active", StringComparison.OrdinalIgnoreCase) ? "Active" :
                (dbStatus.Equals("Inactive", StringComparison.OrdinalIgnoreCase) ? "Inactive" : "N/A");

                var dotColorClass =
                dbStatus.Equals("Active", StringComparison.OrdinalIgnoreCase) ? "bg-success" : "bg-danger";
                
                
                    // 🧩 MOTIVO E DATA (apenas se inativo)
                    string reasonText = colaborador.InactivityReason?.Trim() ?? "";
                    DateTime? returnDate = colaborador.EndDate;

                    // 🧩 NOME E USUÁRIO ATUAL
                    string nomeDisplay = colaborador.FullName;
                    bool isCurrentUser = colaborador.FullName?.Trim() == loggedInUserName?.Trim();
                    if (isCurrentUser)
                    {
                        nomeDisplay += " (You)";
                    }

                    <div class="col-12 mb-2">
                        <div class="card p-2 shadow-sm d-flex flex-row align-items-center" style="max-width: 500px;">

                            <div class="me-3">
                                <img src="@colaborador.PhotoUrl" class="rounded-circle" width="40" height="40" alt="Foto do Colaborador">
                            </div>

                            <div>
                                <h6 class="mb-0 fw-bold">
                                    @nomeDisplay
                                    @if (colaborador.Position?.Trim() == "Project Manager")
                                    {
                                        <span class="manager-crown ms-1" style="font-size: 16px;">&#x1F451;</span>
                                    }
                                </h6>
                                <small class="text-muted">@colaborador.Position</small>
                            </div>

                            <div class="ms-auto d-flex align-items-center">
                                @* AQUI USAMOS O NOVO statusDisplay E dotColorClass *@
                            <span class="status-label @(dbStatus.Equals("Active", StringComparison.OrdinalIgnoreCase) ? "status-active" : "status-inactive")">
                                @statusDisplay

                                    @* Mostrar motivo e data apenas se inativo E usuário logado for Manager *@
                                    @if (dbStatus.Equals("Inativo", StringComparison.OrdinalIgnoreCase) && profile == "Manager" && !string.IsNullOrEmpty(reasonText))
                                    {
                                        <span class="fw-normal text-danger">
                                            (@reasonText
                                            @if (returnDate.HasValue)
                                            {
                                                <text> até @returnDate.Value.ToString("dd/MM/yyyy")</text>
                                            }
                                            )
                                        </span>
                                    }
                                </span>

                                <span class="dot @dotColorClass"></span>
                            </div>
                        </div>
                    </div>
                }
            }
        </div>
    </div>

