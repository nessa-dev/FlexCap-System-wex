@model List<FlexCap.Web.Models.Colaborador>

@{
    ViewData["Title"] = "Colaboradores da Equipe";
    Layout = "~/Views/Shared/Template.cshtml";

    // 🚩 VARIÁVEL OBRIGATÓRIA: Deve ser passada pela Action C#
    string loggedInUserName = ViewData["LoggedInUserName"] as string ?? "";

    // 💡 Defina o CSS do dot aqui se necessário, ou em um arquivo CSS separado
}

<div class="py-4 w-100">
    <h3 class="fw-bold mb-3">Collaborators</h3>
    <p class="text-muted mb-4">@Model.Count members</p>

    <div class="row g-2">
        @if (Model != null)
        {
            @foreach (var colaborador in Model)
            {
                // **1. BLOCO DE CÁLCULO C# (sem @{...})**
                var statusKey = (colaborador.Status ?? "N/A").ToUpperInvariant().Trim();

                string statusDisplay;
                string statusColorClass;
                string dotColorClass;

                if (statusKey == "ATIVO" || statusKey == "ACTIVE")
                {
                    statusDisplay = "Active";
                    statusColorClass = "text-success";
                    dotColorClass = "bg-success";
                }
                else
                {
                    statusDisplay = "Inactive";
                    statusColorClass = "text-danger";
                    dotColorClass = "bg-danger";
                }

                // Nome e verificação do usuário atual
                var nomeDisplay = colaborador.FullName;
                bool isCurrentUser = colaborador.FullName?.Trim() == loggedInUserName?.Trim();
                if (isCurrentUser) { nomeDisplay += " (You)"; }

                // DEBUG visível na página
                // Esta linha estava causando o erro se estivesse aninhada incorretamente.
                <p style="color:gray; font-size:12px;">
                    DEBUG → @colaborador.FullName : "@colaborador.Status" (Key: @statusKey, Display: @statusDisplay)
                </p>


                <!-- 2. HTML do card usa as variáveis calculadas acima -->
                <div class="col-12 mb-2">
                    <div class="card p-2 shadow-sm d-flex flex-row align-items-center" style="max-width: 500px;">

                        <div class="position-relative me-3">
                            <!-- Assumindo que você tem uma função/lógica para PhotoUrl que não é nula -->
                            <img src="@colaborador.PhotoUrl" class="rounded-circle" width="40" height="40" alt="Foto do Colaborador">

                            @if (colaborador.Position?.Trim() == "Project Manager")
                            {
                                <span class="manager-crown position-absolute top-0 end-0" style="font-size: 16px;">
                                    &#x1F451;
                                </span>
                            }
                        </div>

                        <div>
                            <h6 class="mb-0 fw-bold">@nomeDisplay</h6>
                            <small class="text-muted">@colaborador.Position</small>
                        </div>

                        <div class="ms-auto d-flex align-items-center">
                            <span class="@statusColorClass me-2 fw-bold small">@statusDisplay</span>
                            <span class="dot @dotColorClass"></span>
                        </div>

                    </div>
                </div>
            }
        }
    </div>
</div>
<!-- O CSS para a classe .dot é obrigatório para que a bolinha apareça! -->
<style>
    .dot {
        height: 10px;
        width: 10px;
        border-radius: 50%;
        display: inline-block;
    }
</style>