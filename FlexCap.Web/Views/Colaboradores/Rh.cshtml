@using FlexCap.Web.Models
@model List<FlexCap.Web.Models.Colaborador>

@{
    ViewData["Title"] = "Gestão de Colaboradores (RH)";
    Layout = "~/Views/Shared/Template.cshtml";
}


<div class="py-4" style="max-width: 850px; width: 100%; margin-left: 0.5rem; margin-right: auto; overflow-y: hidden; height: calc(100vh - 5rem);">

    <h3 class="fw-bold mb-3">Colaboradores</h3>

    <div class="row g-2 mb-4 d-flex align-items-end">

        <!-- Filtro: Name -->
        <div class="col-md-2">
            <label for="search-name" class="form-label small mb-0">Name</label>
            <input type="text" id="search-name" class="form-control form-control-sm" placeholder="Search name">
        </div>

        <!-- Filtro: Status -->
        <div class="col-md-2">
            <label for="status" class="form-label small mb-0">Status</label>
            <select id="status" class="form-select form-select-sm">
                <option>Active</option>
                <option>Inactive</option>
            </select>
        </div>

        <!-- Filtro: Country -->
        <div class="col-md-2">
            <label for="country" class="form-label small mb-0">Country</label>
            <select id="country" class="form-select form-select-sm">
                <option>Select country</option>
                <option>Brazil</option>
                <option>United States</option>
                <option>Japan</option>
                <option>Italy</option>
                <option>Canada</option>
            </select>
        </div>

        <!-- Filtro: Sector -->
        <div class="col-md-2">
            <label for="sector" class="form-label small mb-0">Sector</label>
            <select id="sector" class="form-select form-select-sm">
                <option>Select Sector</option>
                <option>Benefits</option>
                <option>Mobility</option>
                <option>Corporate Payments</option>
            </select>
        </div>

        <!-- Filtro: Team -->
        <div class="col-md-2">
            <label for="team" class="form-label small mb-0">Team</label>
            <select id="team" class="form-select form-select-sm">
                <option>Select Team</option>
                <option>Titans</option>
                <option>Code Warriors</option>
                <option>Bug Busters</option>
            </select>
        </div>

        <!-- Botão de Busca -->
        <div class="col-auto">
            <button class="btn btn-dark btn-sm" style="margin-top: 20px;">
                <span class="material-icons" style="font-size: 18px;">search</span>
            </button>
        </div>
    </div>

    <div class="table-scroll-container">
        <table class="table align-middle table-sm">
            <thead class="table-light sticky-header">
                <tr>
                    <th>Photo</th>
                    <th>Name</th>
                    <th>Position</th>
                    <th>Country</th>
                    <th>Current Status</th>
                    <th>Sector</th>
                    <th>Team</th>
                </tr>
            </thead>
            <tbody>
                @if (Model != null)
                {
                    @foreach (var colaborador in Model)
                    {
                        <tr>
                            <td><img src="@colaborador.FotoUrl" class="rounded-circle" width="30" height="30"></td>
                            <td><strong>@colaborador.NomeCompleto</strong></td>
                            <td>@colaborador.Cargo</td>
                            <td>@colaborador.Pais</td>
                            <td>@colaborador.Status</td>
                            <td>@colaborador.Setor</td>
                            <td>@colaborador.Time</td>
                        </tr>
                    }
                }
            </tbody>
        </table>
    </div>
</div>
