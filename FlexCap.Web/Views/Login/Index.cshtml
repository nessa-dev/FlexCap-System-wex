@model FlexCap.Web.Models.Login.LoginViewModel
@{
    ViewData["Title"] = "Login";
    Layout = null; 
}
<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="utf-8" />
    <title>Tela de Login</title>
    <meta name="viewport" content="width=device-width, initial-scale=1" />

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css">

    <link rel="stylesheet" href="~/css/login.css" asp-append-version="true" />
</head>
<body>
    <div class="login-container">
        <div class="left-panel">
            <h2><span class="orange">WEL</span>COME!</h2>
            <form asp-action="Login" method="post" class="w-100" style="max-width: 300px;">
                @Html.AntiForgeryToken()

                <div asp-validation-summary="ModelOnly" class="text-danger mb-3 font-semibold text-center"></div>

                <input asp-for="Email" class="form-control mb-2" placeholder="E-mail" />
                <span class="text-danger" asp-validation-for="Email"></span>

                <input asp-for="Senha" class="form-control mb-2" type="password" placeholder="Password" />
                <span class="text-danger" asp-validation-for="Senha"></span>

                <button type="submit" class="btn btn-submit w-100 mt-3">SUBMIT</button>

                <a asp-controller="Recovery" asp-action="ForgotPassword" class="text-white text-decoration-none">
                    Forgot Password?
                </a>

                <hr class="text-light" />

                <div class="text-center">
                    <a href="/Cadastro/Cadastro" class="btn-outline">Create account</a>
                </div>
            </form>

            <div class="logo mt-4">Fle<span>X</span>Cap</div>
        </div>

        <div class="right-panel">
            <img src="~/img/login.png" alt="Login Illustration" style="width: 700px; height: auto;" />
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/jquery@3.7.1/dist/jquery.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/jquery-validation@1.19.5/dist/jquery.validate.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/jquery-validation-unobtrusive@4.0.0/jquery.validate.unobtrusive.min.js"></script>
</body>
</html>